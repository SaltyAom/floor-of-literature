#sign-layout
    @apply flex flex-col justify-center items-center mx-auto px-4
    max-width 320px
    min-height 100vh

    & > .title
        @apply font-semibold text-4xl text-gray-700

    & > .sub-title
        @apply font-light text-lg text-gray-700 mt-2 mb-6

    & > .error
        @apply w-full px-4 text-red-600 font-medium my-2 text-left