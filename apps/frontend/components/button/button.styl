.button
    @apply inline-block text-gray-700 font-semibold text-lg text-center my-2 px-4 py-3 bg-gray-200 rounded-md

    &.-fluid
        @apply block w-full

    &.-primary
        @apply bg-primary text-primary-text

    &.-space
        @apply mt-4

    &.-transparent
        @apply bg-transparent